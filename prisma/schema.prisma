generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FormStatus {
  DRAFT
  SUBMITTED
}

model User {
  sub             String          @id
  name            String?
  email           String?         @unique
  metadataRecords ModelMetadata[]
}

model ModelMetadata {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status FormStatus @default(DRAFT)
  title  String     @unique
  slug   String     @unique

  createdBy String // The user's Auth0 'sub' ID
  author    User   @relation(fields: [createdBy], references: [sub])

  description    String
  interpretation String
  tags           String[]

  task              String
  subtask           String
  input             String
  inputDimension    String
  output            String[]
  outputDimension   String
  outputConsistency String

  publicationUrl  String
  publicationYear String
  publicationType String
  sourceUrl       String
  sourceType      String
  deployment      String
  license         String

  biomedicalArea String[]
  targetOrganism String[]
  linkPdfStorage String?
  ErsiliaIssue   ErsiliaIssue?

  @@map("model_metadata")
}

model ErsiliaIssue {
  id              String        @id @default(uuid())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  issueNumber     Int
  issueUrl        String
  modelMetadataId String        @unique
  model           ModelMetadata @relation(fields: [modelMetadataId], references: [id], onDelete: Cascade)
}
